generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  username String    @unique
  password String
  Blog     Blog[]
  likes    Like[]
  dislikes Dislike[]
  comments Comment[]
}

model Blog {
  id       Int       @id @default(autoincrement())
  title    String
  content  String
  authorId Int
  author   User      @relation(fields: [authorId], references: [id])
  likes    Like[]
  dislikes Dislike[]
  comments Comment[]
}

model Like {
  id     Int  @id @default(autoincrement())
  blogId Int
  blog   Blog @relation(fields: [blogId], references: [id])
  userId Int
  user   User @relation(fields: [userId], references: [id])

  @@unique([userId, blogId])
}

model Dislike {
  id     Int  @id @default(autoincrement())
  blogId Int
  blog   Blog @relation(fields: [blogId], references: [id])
  userId Int
  user   User @relation(fields: [userId], references: [id])

  @@unique([userId, blogId])
}

model Comment {
  id      Int    @id @default(autoincrement())
  blogId  Int
  blog    Blog   @relation(fields: [blogId], references: [id])
  userId  Int
  user    User   @relation(fields: [userId], references: [id])
  content String
}
